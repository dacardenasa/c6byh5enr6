<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-10">
      <h1>Products</h1>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-sm-10 text-right">
      <%= link_to "Nuevo Producto", new_product_path, remote: true, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-sm-10">
      <table class="table">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <%= render "row", product: product %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
